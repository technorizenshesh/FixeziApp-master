<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">


    <RelativeLayout
        android:id="@+id/Rlone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A &quot;CALL OUT &quot; fee can apply after hours or be chareged upon arrival of a Tradesman i.e. After 4:30pm till 7:00am weekdays or Anytime after 4:30pm Friday untill 7:00am Monday"
            android:textSize="16sp"
            android:id="@+id/YourText" />

    </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Rlone">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundedbuttongreen"
                android:text="Ok"
                android:id="@+id/okBt"
                android:textColor="#ffffff" />

        </RelativeLayout>


</RelativeLayout>