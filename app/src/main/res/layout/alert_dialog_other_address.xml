<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    >


    <RelativeLayout
        android:id="@+id/Rlone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="By slecting this field you can enter an address different from your own, and you will pay the Tradesman. For Example\n1. For a real-estate company.\n2. For your parents/friend.\n3. For a rental property.\n4. For your business.\n\nYou can also save or load an address for the next time you want to use it."
            />

    </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Rlone"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/roundedbuttongreen"
                android:text="Ok"
                android:id="@+id/OkayBTOther"
                android:textColor="#ffffff" />

        </RelativeLayout>


</RelativeLayout>