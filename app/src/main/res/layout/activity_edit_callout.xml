<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_callout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <RelativeLayout
        android:id="@+id/ToolbarEC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/NavigationUpEC"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_left_white_24dp" />


        </RelativeLayout>


        <TextView
            android:id="@+id/toolbar_title_EC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/RLINVI"
            android:layout_toRightOf="@+id/NavigationUpEC"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:id="@+id/RLINVI"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_arrow_left_white_24dp" />


        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ToolbarEC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Do You Wish To Edit"
                    android:textColor="#000000"
                    android:textSize="16sp" />


                <CheckBox
                    android:id="@+id/EditCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Do you charge a callout fee ?"
                    android:textColor="#000000"
                    android:textSize="16sp" />


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/l1"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@color/grey"
                    android:gravity="center"
                    android:text="Do you work Emergency Callouts ?"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/v1"
                    android:layout_width="5dp"
                    android:layout_height="0dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true" />

                <Button
                    android:id="@+id/AfterHourYesBt"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="1dp"
                    android:layout_toLeftOf="@+id/v1"
                    android:background="@drawable/border_black_solid_white"
                    android:enabled="false"
                    android:text="Yes"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/AfterHourNoBt"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="1dp"
                    android:layout_toRightOf="@+id/v1"
                    android:background="@drawable/border_black_solid_white"
                    android:enabled="false"
                    android:text="No"
                    android:textAllCaps="false" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/worktxt"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:background="@color/grey"
                    android:gravity="center"
                    android:text="Do you work"
                    android:textSize="15dp"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/worktxt"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/ResidentialBT"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:background="@drawable/border_black_solid_white"
                        android:enabled="false"
                        android:text="Residential"
                        android:textAllCaps="false" />

                    <RelativeLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/CommercialBT"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/residentialbtn"
                        android:layout_weight="1"
                        android:background="@drawable/border_black_solid_white"
                        android:enabled="false"
                        android:text="Commercial"
                        android:textAllCaps="false" />

                    <RelativeLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/BothBT"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/residentialbtn"
                        android:layout_weight="1"
                        android:background="@drawable/border_black_solid_white"
                        android:enabled="false"
                        android:text="Both"
                        android:textAllCaps="false" />

                </LinearLayout>
            </RelativeLayout>


            <TextView
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Whats your hourly charge ?"
                android:textColor="@color/black" />

            <RelativeLayout
                android:id="@+id/rangebar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/rel_tv_header"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border_black">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:padding="@dimen/_10sdp"
                        android:text="Min"
                        android:textColor="@color/black" />


                    <SeekBar
                        android:id="@+id/seekBar_book"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:max="500"
                        android:maxWidth="5dp"
                        android:maxHeight="5dp"
                        android:minWidth="10dp"
                        android:minHeight="10dp"
                        android:progressDrawable="@drawable/custom_seekbar"
                        android:thumb="@drawable/custom_thumb" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:padding="@dimen/_10sdp"
                        android:text="Max"
                        android:textColor="@color/black" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_value_chage"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:text=""
                    android:textColor="@color/black" />

            </RelativeLayout>


            <TextView
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_weight="1"
                android:text="OR "
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_25sdp">

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:text="I only work off fixed price "
                    android:textColor="@color/black" />

                 <CheckBox
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp">

                 </CheckBox>

            </LinearLayout>

         </LinearLayout>

         <Button
            android:id="@+id/UpdateCalloutBT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="#00A59A"
            android:fontFamily="@font/droidderif"
            android:text="Save Changes"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>
