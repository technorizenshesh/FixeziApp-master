<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <include
        android:id="@+id/invoices_toolbar"
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/invoices_toolbar">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <RelativeLayout
                android:id="@+id/takephotolayyyy"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_black">


                <TextView
                    android:id="@+id/TakePhotoTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:singleLine="true"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:background="#1E90FF"
                    android:text="Take a Photo of your invoices"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/camimageeeelayyy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/takephotolayyyy"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/invoicecam"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/cameraiconnew" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/imagesslayyyy"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/camimageeeelayyy"
                android:layout_marginTop="35dp">

                <ImageView
                    android:id="@+id/bluefolderimage"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/foldericonnew" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>

