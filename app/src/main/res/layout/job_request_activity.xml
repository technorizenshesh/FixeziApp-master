<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <include
        android:id="@+id/job_req_toolbar"
        layout="@layout/toolbar_cancel" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/job_req_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">


            <com.cliffex.Fixezi.MyUtils.MyFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_black_solid_grey"
                android:padding="10dp"
                android:text="Please wait while the Tradesman receives your Job request,they will get back to you shortly."
                android:textColor="#000000" />

            <com.cliffex.Fixezi.MyUtils.MyFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FEF200"
                android:padding="10dp"
                android:text="Please keep your phone near you, just incase the tradesman needs to contact you !"
                android:textColor="#000000" />

            <RelativeLayout
                android:id="@+id/RLDetailUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:paddingBottom="20dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/CardViewOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundedcorners_cardview"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RelativeLayout
                            android:id="@+id/Rlone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/PTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Problem :"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_problem_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/PTV" />


                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/RLTwo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Rlone"
                            android:layout_marginTop="10dp">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/DateTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Date :"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/datetxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/DateTV" />

                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingLeft="10dp">


                                <TextView
                                    android:id="@+id/FlexibleDateTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Flexible :"
                                    android:textColor="#000000" />

                                <TextView
                                    android:id="@+id/tv_flexible_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/FlexibleDateTV" />

                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/RLThree"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/RLTwo"
                            android:layout_marginTop="10dp">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                 <TextView
                                    android:id="@+id/TimeTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Time :"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/timetxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/TimeTV" />

                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingLeft="10dp">

                                <TextView
                                    android:id="@+id/FlexibleTimeTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Flexible :"
                                    android:textColor="#000000" />

                                <TextView
                                    android:id="@+id/tv_flexible_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/FlexibleTimeTV" />

                            </RelativeLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Time Flexibility :"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/TimeFlexibilityTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp" />


                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/RLFourth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/RLThree"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/PosTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Person On Site :"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_person_site"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/PosTV" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/RLFive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/RLFourth"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/AddressTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Job Address :"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_job_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/AddressTV" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/RLSix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/RLFive"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/HomeNumberTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Home Number :"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_home_contact_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/HomeNumberTV" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/RLSeven"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/RLSix"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/MobileNumberTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile Number :"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_mobile_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/MobileNumberTV" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/RLEight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/RLSeven"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/JobRequestTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Job Request :"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_job_requirment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/JobRequestTV" />


                        </RelativeLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/CardViewTwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/CardViewOne"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundedcorners_cardview"
                        android:padding="10dp">

                        <RelativeLayout
                            android:id="@+id/RLZero"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bill Payer"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="16sp" />


                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/RlNine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/RLZero"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/tv_bill_payer_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="Mr. fullname"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tv_bill_payer_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="full address"
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/RLTen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/RlNine"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/HomeNmberTV2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Home Number :"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_bill_payer_home_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/HomeNmberTV2" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/RLeleven"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/RLTen"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/WorkNumberTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Work Number :"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_bill_payer_work_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/WorkNumberTV"

                                />


                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/RLTwelve"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/RLeleven"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/MobileNumberTV2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile Number :"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_bill_player_mobile_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/MobileNumberTV2" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/RLThirteen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/RLTwelve"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/EmailTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email :"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_bill_payer_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/EmailTV" />


                        </RelativeLayout>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/CardViewThree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/CardViewTwo"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundedcorners_cardview"
                        android:padding="10dp">

                        <RelativeLayout
                            android:id="@+id/RLtradesman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tradesman"
                                android:textColor="@android:color/holo_red_dark"
                                android:textSize="16sp" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/RLfourteen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/RLtradesman"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/tv_trademan_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ABC Plumbing"
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/RLfifteen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/RLfourteen"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/OfficeNumberTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Office Number :"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_trademan_off_mobile_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/OfficeNumberTV"

                                />


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/RLfifteen"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/MobileNumberTV3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile Number :"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_trademan_mobile_no"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/MobileNumberTV3"

                                />


                        </RelativeLayout>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RLDetailUser"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:visibility="gone">


                <RelativeLayout
                    android:id="@+id/cancelTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/canceljob11"
                        android:layout_width="125dp"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/rounded_button_red"
                        android:gravity="center"
                        android:text="Cancel Job"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </RelativeLayout>


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>