<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tradesamn_toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/NoteOptionsLL"
        android:layout_below="@+id/tradesamn_toolbar">

        <LinearLayout
            android:id="@+id/RLDetailScheduleAJD"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CardViewOne"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundedcorners_cardview"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Status"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/StatusDetailAJDTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/SubStatusDetailAJDTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Pay with card"
                        android:visibility="gone" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/CardViewOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:id="@+id/RLFirst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundedcorners_cardview"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <RelativeLayout
                        android:id="@+id/Rlone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/PTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Problem :"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/ProblemDetailScheduleAJD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/PTV" />


                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/RLTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Rlone"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/DateTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date :"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/DateDetailScheduleAJD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/DateTV"
                                android:textColor="@color/black"

                                />

                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">


                            <TextView
                                android:id="@+id/FlexibleDateTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Flexible :"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/FlexibleDateDetailScheduleAJD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/FlexibleDateTV"
                                android:textColor="@color/black"

                                />

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/RLThree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/RLTwo"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/TimeTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Time :"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/TimeDetailScheduleAJD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/TimeTV"
                                android:textColor="@color/black"

                                />

                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">


                            <TextView
                                android:id="@+id/FlexibleTimeTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Flexible :"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/FlexibleTimeDetailScheduleAJD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/FlexibleTimeTV"
                                android:textColor="@color/black"

                                />

                        </RelativeLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time Flexibility :"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/TimeFlexibilityTVAJD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/black" />


                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/RLFourth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/RLThree"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/PosTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Person On Site :"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/PersonOnSiteDetailScheduleAJD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/PosTV"
                            android:textColor="@color/black" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/RLFive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/RLFourth"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/AddressTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Job Address :"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/JobAddressDetailScheduleAJD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/AddressTV"
                            android:padding="2dp"
                            android:textColor="@color/skyblue" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/RLSix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/RLFive"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/HomeNumberTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Home Number :"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/HomeNmberDetailScheduleAJD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/HomeNumberTV"
                            android:textColor="@color/black" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/RLSeven"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/RLSix"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/MobileNumberTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile Number :"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/MobileNmberDetailScheduleAJD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/MobileNumberTV"
                            android:padding="2dp"
                            android:textColor="@color/skyblue" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/RLEight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/RLSeven"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/JobRequestTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Job Request :"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/JobRequestDetailScheduleAJD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/JobRequestTV"
                            android:textColor="@color/black" />


                    </RelativeLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/CardViewTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CardViewOne"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundedcorners_cardview"
                    android:padding="10dp">

                    <RelativeLayout
                        android:id="@+id/RLZero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bill Payer"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="16sp" />


                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/RlNine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/RLZero"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/FullNameDetailScheduleAJD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/FullAddressDetailUserScheduleAJD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/RLTen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/RlNine"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/HomeNmberTV2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other Number :"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/HomeNmberDetailUserScheduleAJD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/HomeNmberTV2"
                            android:textColor="@color/black" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/RLeleven"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/RLTen"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/WorkNumberTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Work Number :"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/WorkNmberDetailUserScheduleAJD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/WorkNumberTV"
                            android:textColor="@color/black" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/RLTwelve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/RLeleven"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/MobileNumberTV2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile Number :"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/MobileNmberDetailUserScheduleAJD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/MobileNumberTV2"
                            android:textColor="@color/skyblue"/>

                    </RelativeLayout>


                     <RelativeLayout
                        android:id="@+id/RLThirteen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/RLTwelve"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/EmailTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email :"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/EmailDetailScheduleAJD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/EmailTV"
                            android:textColor="@color/black" />

                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/NoteOptionsLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/notes_layout"/>

    </LinearLayout>


</RelativeLayout>
