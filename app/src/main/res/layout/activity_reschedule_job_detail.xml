<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".RescheduleJobsDetail">


    <include
        android:id="@+id/tradesamn_toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tradesamn_toolbar"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/RLDetailRSJ"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/CardViewOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="320dp">


                    <LinearLayout
                        android:id="@+id/RLFirst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundedcorners_cardview"
                        android:orientation="vertical"
                        android:padding="10dp">


                        <RelativeLayout
                            android:id="@+id/Rlone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/PTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Problem :"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/ProblemDetailRSJ"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/PTV" />


                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/RLTwo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Rlone"
                            android:layout_marginTop="10dp">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/DateTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Date :"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/DateDetailRSJ"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/DateTV"

                                    />

                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">


                                <TextView
                                    android:id="@+id/FlexibleDateTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Flexible :"
                                    android:textColor="#000000" />

                                <TextView
                                    android:id="@+id/FlexibleDateDetailRSJ"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/FlexibleDateTV"

                                    />

                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/RLThree"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/RLTwo"
                            android:layout_marginTop="10dp">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/TimeTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Time :"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/TimeDetailRSJ"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/TimeTV"

                                    />

                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">


                                <TextView
                                    android:id="@+id/FlexibleTimeTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Flexible :"
                                    android:textColor="#000000" />

                                <TextView
                                    android:id="@+id/FlexibleTimeDetailRSJ"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@+id/FlexibleTimeTV"

                                    />

                            </RelativeLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Time Flexibility :"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/TimeFlexibilityTVDetailRSJ"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp" />


                        </LinearLayout>


                        <RelativeLayout
                            android:id="@+id/RLFourth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/RLThree"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/PosTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Person On Site :"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/PersonOnSiteDetailRSJ"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/PosTV" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/RLFive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/RLFourth"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/AddressTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Job Address :"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/JobAddressDetailRSJ"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/AddressTV" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/RLSix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/RLFive"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/HomeNumberTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Home Number :"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/HomeNmberDetailRSJ"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/HomeNumberTV" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/RLSeven"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/RLSix"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/MobileNumberTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobile Number :"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/MobileNmberDetailRSJ"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/MobileNumberTV" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/RLEight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/RLSeven"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:id="@+id/JobRequestTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Job Request :"
                                android:textColor="#000000"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/JobRequestDetailRSJ"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/JobRequestTV"
                                />


                        </RelativeLayout>

                    </LinearLayout>
                </ScrollView>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/CardViewTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CardViewOne"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundedcorners_cardview"
                    android:padding="10dp">

                    <RelativeLayout
                        android:id="@+id/RLZero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bill Payer"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="16sp" />


                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/RlNine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/RLZero"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/FullNameDetailRSJ"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/FullAddressDetailUserRSJ"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/RLTen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/RlNine"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/HomeNmberTV2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Home Number :"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/HomeNmberDetailUserRSJ"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/HomeNmberTV2" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/RLeleven"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/RLTen"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/WorkNumberTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Work Number :"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/WorkNmberDetailUserRSJ"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/WorkNumberTV"

                            />


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/RLTwelve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/RLeleven"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/MobileNumberTV2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile Number :"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/MobileNmberDetailUserRSJ"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/MobileNumberTV2"

                            />


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/RLThirteen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/RLTwelve"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/EmailTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email :"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/EmailDetailRSJ"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/EmailTV"

                            />


                    </RelativeLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CardViewTwo"
                android:layout_marginTop="10dp">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    >

                    <Button
                        android:id="@+id/AcceptJobBtRSJ"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/roundedbuttongreen"
                        android:text="Accept"
                        android:textColor="#ffffff" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    >

                    <Button
                        android:id="@+id/RejectJobBtRSJ"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/rounded_button_red"
                        android:text="Reject"
                        android:textColor="#ffffff" />

                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
