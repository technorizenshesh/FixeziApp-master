<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">


    <include
        android:id="@+id/ToolbarVN"
        layout="@layout/toolbar" />

    <com.cliffex.Fixezi.MyUtils.MyFontBoldTextView
        android:id="@+id/Signtt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ToolbarVN"
        android:background="#000000"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text=""
        android:textColor="#ffffff"
        android:textStyle="bold" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/Signtt">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerViewVN"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </RelativeLayout>

    <com.cliffex.Fixezi.MyUtils.MyFontBoldTextView
        android:id="@+id/NoJobsFoundTV8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#ffffff"
        android:text="No Notes Found"
        android:textColor="#000000"
        android:textStyle="bold"
        android:visibility="gone" />


</RelativeLayout>
