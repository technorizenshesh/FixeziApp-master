<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <include
        android:id="@+id/tradesman_profile_toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tradesman_profile_toolbar"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundedcorners_gray"
            android:padding="10dp">

             <com.cliffex.Fixezi.MyUtils.MyFontTextView
                android:id="@+id/SubscribeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Payment Plan"
                android:textColor="#000000"
                android:textSize="18sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RLTradesmanInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundedcorners_gray"
            android:padding="10dp">

            <com.cliffex.Fixezi.MyUtils.MyFontTextView
                android:id="@+id/TradesmanInfoTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Company Information"
                android:textColor="#000000"
                android:textSize="18sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundedcorners_gray"
            android:padding="10dp">

            <com.cliffex.Fixezi.MyUtils.MyFontTextView
                android:id="@+id/tv_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Your Ratings"
                android:textColor="#000000"
                android:textSize="18sp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundedcorners_gray">

            <com.cliffex.Fixezi.MyUtils.MyFontTextView
                android:id="@+id/CreateUserTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Create Employee Id"
                android:textColor="#000000"
                android:textSize="18sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/RLfournew2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundedcorners_gray"
            android:padding="10dp">

            <com.cliffex.Fixezi.MyUtils.MyFontTextView
                android:id="@+id/TellaFriendTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tell a friend about Fixezi"
                android:textColor="#000000"
                android:textSize="18sp" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/RLfournew3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundedcorners_gray"
            android:padding="10dp">

            <com.cliffex.Fixezi.MyUtils.MyFontTextView
                android:id="@+id/WhatdoyouthinkTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="What do you think about Fixezi"
                android:textColor="#000000"
                android:textSize="18sp"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/RLNine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundedcorners_gray"
            android:padding="10dp">

            <com.cliffex.Fixezi.MyUtils.MyFontTextView
                android:id="@+id/UnsubscribeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Remove Account"
                android:textColor="#000000"
                android:textSize="18sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_20sdp">

            <Button
                android:id="@+id/active"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/cc"
                android:background="@drawable/btn_hold"
                android:fontFamily="@font/droidderif"
                android:text="Active "
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="15dp" />


            <Button
                android:id="@+id/hodl"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/cc"
                android:background="@drawable/btn_hold"
                android:fontFamily="@font/droidderif"
                android:text="On Hold"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/fb_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scroll_bar"
            android:layout_marginLeft="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_45sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/fb"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>



    </LinearLayout>


</RelativeLayout>
